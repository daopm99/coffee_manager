<% include partials/_header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Admin site</h1>        
            <h1>Customer's requests</h1>    
              <div class="row" style="display: flex; flex-wrap: wrap;">
                <% contacts.forEach( (contact) => { %>
                <div class="col-md-4 col-sm-6">
                  <div class="thumbnail">
                    <h2 class="caption">Name:<%= contact.fullName %></h2>
                    <h2 class="caption">Email:<%= contact.email %></h2>
                    <h4 class="caption">Problem: <%= contact.description %></h4>
                  </div>
                </div>
                <% }); %>
              </div>
        </div>
    </div>
</div>


<% include partials/_footer %>